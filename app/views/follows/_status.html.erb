<div class="following">
<% if user.followers.exists?(current_user) %>
  Following
  <form action="<%= unfollow_url(user) %>" method="post">
    <%= form_auth %>
    <input type="hidden" name="_method" value="delete">

    <button class="center-button">Unfollow</button>
  </form>
<% elsif current_user != user %>
  <form action="<%= user_follows_url(user) %>" method="post">
    <%= form_auth %>

    <button class="center-button">Follow</button>
  </form>
<% end %>
</div>