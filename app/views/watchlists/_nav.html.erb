<ul class="watchlist-nav group">
  <% Watchlist::STATUSES.each do |status| %>
    <li>
      <a href="#<%= status.split(" ").first %>">
        <% if location == status %>
          <strong><%= status %></strong>
        <% else %>
          <%= status %>
        <% end %>
      </a>
    </li>
  <% end %>
</ul>