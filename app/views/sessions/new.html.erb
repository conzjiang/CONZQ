<h1>Sign In</h1>

<%= render partial: "layouts/error" %>

<form action="<%= session_url %>" method="post">
  <%= form_auth %>
  
  <label>
    Username:<br>
    <input type="text" name="user[username]">
  </label>
  <br>
  
  <label>
    Password:<br>
    <input type="password" name="user[password]">
  </label>
  <br>
  
  <button>Log In</button>
</form>