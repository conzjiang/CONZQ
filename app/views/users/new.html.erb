<h1>Register</h1>

<section class="sign-in">

<form class="user-form" action="<%= users_url %>" method="post">
  <%= form_auth %>
	
  <div class="input-group">
	  <label for="user_email">Email:</label>
	  <input id="user_email" type="text" name="user[email]">
	</div>
	
	<div class="input-group">
		<label for="user_username">Username:</label>
	  <input id="user_username" type="text" name="user[username]">
	</div>
	
  <div class="input-group">
		<label for="user_password">Password:</label>
	  <input id="user_password" type="password" name="user[password]">
	</div>

  <center><button>Sign Up!</button></center>
</form>

</section>