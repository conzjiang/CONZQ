<h1>Add a series</h1>

<section class="new-tv-form-container">
	<%= render partial: "layouts/error" %>
	
	<h2>Auto Complete with IMDB</h2>

	<form class="auto-complete" action="<%= auto_complete_url %>" method="post">
	  <%= form_auth %>

	  <label for="tv_title">Title:</label>
	  <input id="tv_title" type="text" name="tv[title]">

	  <button>Fill out form</button>
	</form>

	<p class="or">or</p>

	<h2>Add manually</h2>

	<%= render partial: "form", locals: {
	  action_url: tv_url,
	  button_text: "Add Series",
	  put: false
	  } %>
</section>