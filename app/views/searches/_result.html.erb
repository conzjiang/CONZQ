<a class="show-result" href="<%= tv_show_url(tv) %>">

<h3><%= tv.title %></h3>

<%= render partial: "watchlists/status", locals: { tv: tv } %>
<%= render partial: "favorites/status", locals: { tv: tv } %>

<div class="individual-result group">
  <img src="<%= tv.photo.url(:medium) %>">

  <ul>
    <li>
      <strong>IMDB rating:</strong>
      <p class="rating"><%= tv.rating %></p>
    </li>

    <% tv.genres.each do |genre| %>
    <li class="result-genre"><%= genre.name %></li>
    <% end %>
  </ul>
</div>

<div class="blurb">
  <p><%= tv.blurb %></p>
</div>

</a>