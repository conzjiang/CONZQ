<h1>Your Results</h1>


<% if (resultsExist) { %>
<form id="sort">
	<label for="sort_by">Sort by:</label>
	<select id="sort_by" name="search[sort_by]">
		<option value=""></option>
		<% var sorts = ["A-Z", "Z-A", "Highest Rating", "Lowest Rating"] %>
		<% _(sorts).each(function (sort) { %>
		<option value="<%= sort %>"><%= sort %></option>
		<% }) %>
	</select>
	
	<button>Select</button>
</form>

<ul class="results group"></ul>
<% } else { %>
<center><p>No results!</p></center>
<% } %>