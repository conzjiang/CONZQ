<% usersList.each(function (user) { %>
<li id="follow" data-id="<%= user.id %>">
	<a href="/#/users/<%= user.id %>">
		<img src="/images/missing_thumb.jpg">
	</a>
	
	<ul class="user-info">
		<li class="username">
			<%= user.escape("username") %>
			
			<% if (CONZQ.currentUser && CONZQ.currentUser.id != user.id) { %>
			<button id="follow-status" class="add-follow">Follow</button>
			<button id="follow-status" class="is-following">Following</button>
			<% } %>
		</li>
		<li>
			currently watching
			<strong><%= user.escape("currentCount") %></strong> shows
		</li>
		
		<li>
			<span class="heart"></span>
			<p><%= user.escape("favoritesCount") %> favorite shows</p>
		</li>
	</ul>

</li>
<% }) %>